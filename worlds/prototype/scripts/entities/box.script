# vim: sw=2 sts=2 et syntax= :

param int @fgcolor 15
param int @char 254

local entity %froment noentity
local dir %pushdir idle

on state idle {
}

on event touch %froment %pushdir {
  send %pushdir push %pushdir
  move %pushdir
}

on event push %pushdir {
  send %pushdir push %pushdir
  move %pushdir
}
