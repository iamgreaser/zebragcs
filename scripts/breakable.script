# vim: sw=2 sts=2 et syntax= :

param bool @physblock true
param int @fgcolor 7
param int @bgcolor 0
param int @char 177
param dir @hitdir idle
global dir $shotdir

on state idle {
}
on state shot {
  set @char 176
  sleep 1
  set @char 249
  move @hitdir
  sleep 1
  die
}

on event shot {
  if eq @physblock true {
    set @physblock false
    set @hitdir $shotdir
    goto shot
  }
}
